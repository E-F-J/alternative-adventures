<% local_var = "" %>

<% if params[:controller] == "experiences" && params[:action] == "show" %>
  <% local_var = @experience %>
<% elsif params[:controller] == "experiences" && params[:action] == "my_experiences" %>
  <% local_var = locals[:current_experience] %>
<% else %>
  <% local_var = locals[:current_booking] %>
<% end %>

<% case local_var.experience_type when "Food/Cooking"%>
  <i class="fas fa-utensils"></i>
  <% when "IT" %> <i class="fas fa-robot"></i>
  <% when "Drinking" %> <i class="fas fa-cocktail"></i>
  <% when "Sport/Outdoors" %> <i class="fas fa-basketball-ball"></i>
  <% when "Gardening" %> <i class="fas fa-seedling"></i>
  <% when "Arts/Design" %> <i class="fas fa-palette"></i>
  <% when "Photography" %> <i class="fas fa-camera-retro"></i>
  <% when "Music" %> <i class="fas fa-drum"></i>
  <% when "Parents&Kids" %> <i class="fas fa-child"></i>
  <% when "Other" %> <i class="fas fa-question"></i>
<% end %>
