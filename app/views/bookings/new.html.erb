    <div class="col-xs-10 col-sm-10  offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="card-image-booking mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @experience.photo.key, height: 500, width: 400, crop: :fill %>')">
        <h2><%= @experience.title %></h2>
        <p class="mt-4">Offered by <%= @experience.user.first_name %> <%= @experience.user.last_name %></p>
        <p><%= @experience.experience_type %></p>
        <p>Â£<%= @experience.price %></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="form-booking">
        <%= simple_form_for [@experience, @booking] do |f| %>
        <%= f.input :starts_at, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :ends_at, as: :string, input_html: { class: "datepicker" } %>
        <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


