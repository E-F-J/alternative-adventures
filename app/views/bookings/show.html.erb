<div class="container">
  <h1>Booking#show</h1>
  <p>Title: <%= @booking.experience.title %></p>
  <p>Description: <%= @booking.experience.description %></p>
  <p>Price: <%= @booking.experience.price %></p>
  <p>User: <%= @booking.experience.user_id %></p>
  <%= link_to "Edit Booking", edit_experience_path(@experience) %>
  <%= link_to "Delete Booking", experience_path(@experience), method: :delete, data: {confirm:"chuck norris is watching you..are you sure?"} %>
  <%= link_to "Book Booking", new_experience_booking_path(@experience) %>
</div>
