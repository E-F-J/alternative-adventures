<div class="container">
  <h1>My bookings</h1>
  <hr>
  <% if @bookings.count > 0 %>
    <% @bookings.each do |booking| %>
      <div class="each-card">
        <div class="cardContainer-photo">
          <% if booking.experience.photo.attached? %>
            <div class="card-image mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path booking.experience.photo.key, height: 300, width: 400, crop: :fill %>')">
          <% else %>
            <div class="card-image mb-1">
          <%  end %>
            </div>
        </div>

      <div class="my-description">
        <h4><%= booking.experience.title %></h4>
        <p class="black-text"><i class="far fa-calendar-alt"></i> <%= booking.starts_at.strftime('%d-%m-%Y') %> - <%= booking.ends_at.strftime('%d-%m-%Y') %> </p>
        <p class="black-text">
          <%= render 'components/booking_experience_type', locals: { current_booking: booking.experience } %>
          adventure
        </p>
        <p class="black-text"><i class="fas fa-book-reader"></i> <%= booking.experience.description %></p>
        <p class="black-text"><i class="fas fa-coins"></i> Â£ <%= booking.experience.price %></p>
        <p class="black-text"><i class="fas fa-user"></i> <%= booking.experience.user.first_name %></p>
      </div>
    </div>
    <hr>
    <% end %>
  <% else %>
    <p>Sorry, you don't have any bookings at the moment.</p>
  <% end %>
</div>
